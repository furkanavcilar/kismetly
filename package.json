{
  "name": "kismetly",
  "version": "1.0.0",
  "description": "Kismetly - AI-driven spiritual guidance app with dream interpretation, horoscopes, tarot, and more",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "tsx watch src/server/index.ts",
    "client:dev": "vite",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc --project tsconfig.server.json",
    "build:client": "vite build",
    "start": "node dist/server/index.js",
    "preview": "vite preview",
    "merge:auto": "tsx scripts/auto-merge.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.263.1",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "tsx": "^4.0.0",
    "@types/express": "^4.17.20",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.11",
    "@types/node": "^20.8.0",
    "vite": "^5.0.0",
    "@vitejs/plugin-react": "^4.1.0",
    "concurrently": "^8.2.2"
  }
}
